<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:outlineAmbientShadowColor="@color/colorGreenB"
    android:outlineSpotShadowColor="@color/colorGreenB"
    app:cardBackgroundColor="@color/colorDivider"
    android:layout_marginEnd="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >

        <TextView
            android:id="@+id/currencyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorTextIcons"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorTextIcons"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/volumeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/amountTextView"
            android:textColor="@color/colorTextIcons"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profitLossTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/volumeTextView"
            android:textColor="@color/colorTextIcons"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/takeStopTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/buySellTextView"
            android:textColor="@color/colorTextIcons"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/buySellTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/currencyTextView"
            android:textColor="@color/colorTextIcons"
            android:textSize="15sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fireBaseRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</androidx.cardview.widget.CardView>