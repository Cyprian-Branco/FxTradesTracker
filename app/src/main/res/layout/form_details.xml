<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDivider">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/formTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Calculate P/L below"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorTextIcons"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Input Amount:"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextIcons"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center_vertical"
            android:id="@+id/locationEditText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Input Pips:"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextIcons"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:gravity="center_vertical"
            android:id="@+id/locationEditText1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Input Lot Size:"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextIcons"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:gravity="center_vertical"
            android:id="@+id/locationEditText2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Calculate"
            android:layout_marginTop="60dp"
            android:id="@+id/calculateFormButton"
            android:onClick="goToTrade_details"
            android:padding="30dp" />
    </LinearLayout>

</RelativeLayout>